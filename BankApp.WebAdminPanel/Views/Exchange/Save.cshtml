@using BankApp.WebAdminPanel.Models.Exchange
@model SaveExchangeViewModel

<div class="modal-dialog modal-dialog-scrollable modal-lg">
    <!-- Modal content -->
    <div class="modal-content" id="editDebtModelBody">
        <div style="overflow:auto;" class="modal-body">
            <form asp-controller="Exchange" asp-action="Save" class="form-group">
                <input hidden asp-for="Exchange.Id"/>

               <div class="form-group">
                    <label for="name" class="mr-sm-2">Client list:</label>
                    <select asp-for="Exchange.Client.Id" asp-items="Model.ExchangeList" class="form-control mb-2 mr-sm-2">

                    </select>

                    <span asp-validation-for="Exchange.Client.Name" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label for="name" class="mr-sm-2">Phone:</label>
                    <input asp-for="Exchange.Phone" class="form-control mb-2 mr-sm-2" />
                    <span asp-validation-for="Exchange.Phone" class="text-danger"></span>
                </div>
                
                <div class="form-group">
                    <label for="name" class="mr-sm-2">AmountFromExchange:</label>
                    <input asp-for="Exchange.AmountFromExchange" class="form-control mb-2 mr-sm-2" />
                    <span asp-validation-for="Exchange.AmountFromExchange" class="text-danger"></span>
                </div>
                
                <div class="form-group">
                    <label for="name" class="mr-sm-2">AmountToExchange:</label>
                    <input asp-for="Exchange.AmountToExchange" class="form-control mb-2 mr-sm-2" />
                    <span asp-validation-for="Exchange.AmountToExchange" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label for="name" class="mr-sm-2">ConvertFromCurrency:</label>
                    <input asp-for="Exchange.ConvertFromCurrency" class="form-control mb-2 mr-sm-2" />
                    <span asp-validation-for="Exchange.ConvertFromCurrency" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label for="name" class="mr-sm-2">ConvertToCurrency:</label>
                    <input asp-for="Exchange.ConvertToCurrency" class="form-control mb-2 mr-sm-2" />
                    <span asp-validation-for="Exchange.ConvertToCurrency" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label for="name" class="mr-sm-2">Date:</label>
                    <input asp-for="Exchange.Date" class="form-control mb-2 mr-sm-2" />
                    <span asp-validation-for="Exchange.Date" class="text-danger"></span>
                </div>

                <div class="modal-footer">
                    <button type="submit" class="btn btn-primary bgupdate">Save</button>
                </div>
            </form>
        </div>
    </div>
</div>

<partial name="_ValidationScriptsPartial"/>
